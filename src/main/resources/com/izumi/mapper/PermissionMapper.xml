<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.izumi.mapper.PermissionMapper">
    <sql id="selectPermissionVo">
        select id, name, expression
        from permission
    </sql>
    <resultMap id="BaseResultMap" type="com.izumi.domain.Permission">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="expression" property="expression"/>
    </resultMap>
    <insert id="batchInsert">
        INSERT INTO permission(name, expression) VALUES
        <foreach collection="permissions" item="permission" separator=",">
            (#{permission.name}, #{permission.expression})
        </foreach>
    </insert>
    <select id="selectAll" resultMap="BaseResultMap">
        <include refid="selectPermissionVo"/>
         order by expression
  </select>
    <select id="selectForList" resultType="com.izumi.domain.Permission">
        <include refid="selectPermissionVo"/>
  </select>
    <select id="selectByRoleId" resultType="com.izumi.domain.Permission">
        SELECT p.id, p.name, p.expression
        FROM role_permission rp
        JOIN permission p ON rp.permission_id = p.id
        WHERE rp.role_id = #{roleId}
  </select>
    <!--根据员工ID查询表达式-->
    <select id="selectExpressionByEmpId" parameterType="long" resultType="String">
        select expression from employee_role er
        left join role_permission rp on er.role_id = rp.role_id
        left join permission p on rp.permission_id = p.id
        where employee_id = #{id}
    </select>
</mapper>